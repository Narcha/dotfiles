[core]
    editor = nvim
    pager = delta

[user]
	name = Narcha
	email = 42248344+Narcha@users.noreply.github.com
	signingkey = 584EB9E7510C84A8

[credential]
	helper = store

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
    side-by-side = true
    syntax-theme = Catppuccin-macchiato

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[commit]
	gpgsign = true

[init]
	defaultBranch = main

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
